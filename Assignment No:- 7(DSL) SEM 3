n = int(input(("Enter total number of students :-")))
arr = []
def enter(n, arr):
for i in range(n):
percentage = float(input("Enter Percentage : "))
while True:
if percentage >= 0 and percentage <= 100:
break
else:
print("Invalid Marks ! Please enter correct marks!")
percentage = float(input("Enter Percentage: "))
arr.append(percentage)
def insertion_sort(n,arr):
for i in range(1,len(arr)):
key=arr[i]
j = i-1
while j >=0 and key < arr[j] :
arr[j+1] = arr[j]

j -= 1
arr[j+1] = key
def shell_sort(n,arr):
n = len(arr)
gap = n // 2
while gap > 0:
for i in range(gap,n):
temp = arr[i]
j = i
while j >= gap and arr[j-gap] >temp:
arr[j] = arr[j-gap]
j -= gap
arr[j] = temp
gap //= 2
def display(n, arr):
st=[]
print("Sorted array is : ")
for i in range(len(arr)):
st.append(arr[i])
print(st)
arr1 = []
print("Top 5 scores are :")
for i in range(n):
if i > n-6 :
arr1.append(arr[i])
print(arr1)
enter(n, arr)
while True:

print("\n----Enter your choice from 1/2/3---- \n ")
print("1. Sorted list by Insertion Sort\n")
print("2. Sorted list by Shell Sort\n")
print("3. Exit\n")
choice = int(input("----Enter your choice from 1/2/3: ----\n"))
if choice == 1:
print("\n---Sorted List(Insertion Sort)---")
print("The Original List is:\n", arr)
insertion_sort(n,arr)
display(n, arr)
elif choice == 2:
print("\n---Sorted List(Shell Sort)---")
print("The Original List is:\n", arr)
shell_sort(n, arr)
display(n,arr)
elif choice == 3:
print("End of the Program!\n")
